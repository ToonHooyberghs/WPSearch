<header>
    <div class="content-wrapper">
        <div class="float-left">
            <p class="site-title">
                <a href="~/">WPSearch Web API</a></p>
        </div>
    </div>
</header>
<div id="body">
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
            <div>
                <table><tr>
                           <td>Enter search value: <input type="text" id="txtSearchValue" style="width:50PX"/></td>
                           <td><button id="searchButton">Search WPService</button></td>
                       </tr></table>
                
            </div>
        </div>
    </section>

    <h3>Output of action done through WEB API:</h3>
    <ol class="round">
        <li>
            <div id="divResult"></div>

        </li>
    </ol>
</div>

<script src="/Scripts/jquery-1.7.1.js"></script>

<script >

    $("#searchButton").click(function () {

        $.post("/api/WPSearch/Inkt", function(data) {
            console.log("Data: " + data);
        });

    });

</script>